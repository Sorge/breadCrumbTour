<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp" >

    <ScrollView
        android:id="@+id/svSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dAboveSearchTour"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Spinner
                android:id="@+id/sCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvLabelMinimumTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvLabelMinimumTime" />

            <SeekBar
                android:id="@+id/sbMinimumTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="2dp" />

            <RatingBar
                android:id="@+id/rbRating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>
    
    <View style="@style/Divider"
        android:id="@+id/dAboveSearchTour"
        android:layout_above="@+id/bSearchTour" />

    <Button
        android:id="@+id/bSearchTour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/bSearchTour"
        android:layout_marginTop="5dp" />

</RelativeLayout>
